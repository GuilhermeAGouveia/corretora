// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pessoa {
  id        String     @id @default(cuid())
  firstName String
  lastName  String
  email     String
  address   String
  city      String?
  state     String?
  cep       String
  phones    Telefone[]
  createdAt DateTime   @default(now())
  Locador   Locador?
  Locatario Locatario?
  Corretor  Corretor?
}

model Telefone {
  numero    String
  pessoa    Pessoa   @relation(fields: [pessoaId], references: [id])
  pessoaId  String
  createdAt DateTime @default(now())

  @@id([numero, pessoaId], name: "idTelefone")
}

model Locador {
  cod_lcd    String   @id
  is_partner Boolean
  pessoa     Pessoa   @relation(fields: [cod_lcd], references: [id])
  Imovel     Imovel[]
  contratos Corretor_Locador[]
}

model Locatario {
  cod_lct   String   @id
  birthdate DateTime
  pessoa    Pessoa   @relation(fields: [cod_lct], references: [id])
  associados Associado[]
}

model Corretor {
  cod_cor String @id
  score   Int    @default(0)
  pessoa  Pessoa @relation(fields: [cod_cor], references: [id])
  contratos Corretor_Locador[]
}

model Imovel {
  cod_imv   String     @id @default(cuid())
  cod_lcd   String
  type      ImovelType @default(CASA)
  address   String
  cep       String
  district  String
  city      String
  state     String
  describe  String
  createdAt DateTime   @default(now())
  locador   Locador    @relation(fields: [cod_lcd], references: [cod_lcd])
}

enum ImovelType {
  CASA
  APTO
}

model Corretor_Locador {
  cod_cor String 
  cod_lcd String
  commissao   Float    @default(0)
  createdAt DateTime @default(now())
  locador Locador @relation(fields: [cod_lcd], references: [cod_lcd])
  corretor Corretor @relation(fields: [cod_cor], references: [cod_cor])

  @@id([cod_cor, cod_lcd], name: "idCorretorLocador")
}

model Associado {
  nome String
  cod_lct String
  birthdate DateTime
  locatario Locatario @relation(fields: [cod_lct], references: [cod_lct])

  @@id([nome, cod_lct], name: "idAssociado")
}
